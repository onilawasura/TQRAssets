@model IList<TIQRI.ITS.Web.ViewModels.MyTrainingViewModel>
@{
    Layout = null;
}

<table cellpadding="0" cellspacing="0" border="0" class="display" id="TBL_EntitySearchResults" style="width: 100%; margin-top: 10px;">

    @foreach (var item in Model)
    {
        <tr class="dataGridInnertr" onclick="MyTrainingManagement.LoadCourseDetailForm(@item.ObjectId,'@item.ObjectType')">
            <td>
            <td class="entity-index-imagetd">
                <img src="@item.LogoUrl" class="logo-big" />
            </td>
            <td class="entity-data-td">
                <div class="entity-index-item-title-large">@item.CourseName (@item.BatchCode)</div>
                <div style="font-size: 12px;"><span style="margin-right: 15px;"> Status : @item.BatchStatus</span> <span>Start Date : @item.StartDate</span> </div>
            </td>

        </tr>
    }


    @if (Model.Count == 0)
    {
        <tr>
            <td style="padding-left: 20px;">
                You do not have any courses yet.
            </td>
        </tr>
    }
</table>
<script>
    MyTrainingManagement.ResetHeight();
</script>