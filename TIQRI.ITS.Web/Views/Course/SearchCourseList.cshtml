@model IList<TIQRI.ITS.Domain.Models.Course>
@{
    Layout = null;
}

<table cellpadding="0" cellspacing="0" border="0" class="display" id="TBL_EntitySearchResults" style="width: 100%; margin-top: 10px;">

    @foreach (var item in Model)
    {
        <tr class="dataGridInnertr" onclick="CourseManagement.LoadAddEditForm(@item.Id)">
            <td>
            <td class="entity-index-imagetd">
                <img src="@item.LogoUrl" class="logo-big" />
            </td>
            <td class="entity-data-td">
                <div class="entity-index-item-title-large">@item.Name</div>
                <div style="font-size: 12px;"><span style="margin-right: 15px;"> Sessions : @item.NoOfSessions</span> <span>Participants : @item.MaxNoOfStudents</span> </div>
            </td>

        </tr>
    }


    @if (Model.Count == 0)
    {
        <tr>
            <td style="padding-left: 20px;">
                No records found.
            </td>
        </tr>
    }
</table>
<script>
    CourseManagement.ResetHeight();
</script>